<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMeals.Pages.AddressPage"
             Title="AddressPage">

    <VerticalStackLayout Margin="20" Spacing="10" VerticalOptions="Start">

        <Label Text="Delivery address" HorizontalOptions="Center" FontSize="Large" />

        <Frame Padding="10" BackgroundColor="White">

            <VerticalStackLayout>

                <Entry Placeholder="Full name" x:Name="EntName" FontAttributes="Bold"
                FontSize="Medium" Keyboard="Default"/>

                <Entry Placeholder="Telephone Number" x:Name="EntTelephone" 
                FontAttributes="Bold" FontSize="Medium" Keyboard="Telephone"/>

                <Entry Placeholder="Address"  HeightRequest="100" x:Name="EntAddress" 
                FontAttributes="Bold" FontSize="Medium" Keyboard="Default"/>

            </VerticalStackLayout>

        </Frame>

        <Button x:Name="BtnSave" Text="Save" FontSize="Medium" Clicked="BtnSave_Clicked"/>
    </VerticalStackLayout>

</ContentPage>