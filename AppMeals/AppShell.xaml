<Shell
    x:Class="AppMeals.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMeals"
    xmlns:pages="clr-namespace:AppMeals.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#a90409"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="White">

    <TabBar>
        <Tab Title="Home" Icon="home">
            <ShellContent
                Route="home"
                ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
        <Tab Title="ShoppingCart" Icon="cart">
            <ShellContent
                Route="shoppingcart"
                ContentTemplate="{DataTemplate pages:ShoppingCartPage}" />
        </Tab>
        <Tab Title="Favorites" Icon="heart">
            <ShellContent
                Route="favorites"
                ContentTemplate="{DataTemplate pages:FavoritesPage}" />
        </Tab>
        <Tab Title="Profile" Icon="profile">
            <ShellContent
                Route="profile"
                ContentTemplate="{DataTemplate pages:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
